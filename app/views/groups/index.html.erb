<div id="wrapper">

  <div id="top-nav">
    <span>Group Message Home</span>
    <span>Hi, <%= @user.username %></span>
  </div>

  <div id="scrollbox">
    <span>Groups:</span><br>
    <span>
      <% @user.groups.each do |group| %>
        <%=link_to group.name, group_path(group) %><br>
      <% end %>
    </span><br>
    <span>Contacts:</span><br>
    <span>
      <% @user.contacts.each do |contact| %>
        <%= contact.username %><br>
      <% end %>
    </span>
  </div>

  <div id="show_box">
    Click on a group.
  </div>

  <div class="bottom-nav" id="bottom-left">
    Bottom left
  </div>

  <div class="bottom-nav" id="bottom-right">
    Bottom right
  </div>

</div>
